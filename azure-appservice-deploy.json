{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "[concat('finagent-backend-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the backend web app"
      }
    },
    "frontendAppName": {
      "type": "string",
      "defaultValue": "[concat('finagent-web-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the frontend web app"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "finagent-app-plan",
      "metadata": {
        "description": "Name of the App Service Plan"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "redisName": {
      "type": "string",
      "defaultValue": "[concat('finagent-redis-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the Azure Cache for Redis instance"
      }
    },
    "supabaseUrl": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase URL"
      }
    },
    "supabaseAnonKey": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase Anonymous Key"
      }
    },
    "supabaseServiceKey": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase Service Key"
      }
    },
    "plaidClientId": {
      "type": "securestring",
      "metadata": {
        "description": "Plaid Client ID"
      }
    },
    "plaidSecret": {
      "type": "securestring",
      "metadata": {
        "description": "Plaid Secret"
      }
    },
    "polygonApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Polygon API Key"
      }
    },
    "alpacaApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Alpaca API Key"
      }
    },
    "alpacaSecretKey": {
      "type": "securestring",
      "metadata": {
        "description": "Alpaca Secret Key"
      }
    },
    "openaiApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "OpenAI API Key"
      }
    },
    "anthropicApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Anthropic API Key"
      }
    },
    "groqApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Groq API Key"
      }
    },
    "mem0ApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Mem0 API Key"
      }
    }
  },
  "variables": {
    "redisCacheName": "[parameters('redisName')]",
    "appServicePlanSku": "B2"
  },
  "resources": [
    {
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2023-08-01",
      "name": "[variables('redisCacheName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "Basic",
          "family": "C",
          "capacity": 0
        },
        "enableNonSslPort": false,
        "minimumTlsVersion": "1.2",
        "redisConfiguration": {}
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "kind": "linux",
      "properties": {
        "reserved": true
      },
      "sku": {
        "name": "[variables('appServicePlanSku')]",
        "tier": "Basic",
        "size": "[variables('appServicePlanSku')]",
        "family": "B",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.Cache/redis', variables('redisCacheName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "appCommandLine": "/home/site/wwwroot/azure-startup.sh",
          "alwaysOn": true,
          "http20Enabled": true,
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "nodeVersion": "20-lts",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "8080"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "20-lts"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "REDIS_URL",
              "value": "[concat('rediss://', variables('redisCacheName'), '.redis.cache.windows.net:6380')]"
            },
            {
              "name": "REDIS_PASSWORD",
              "value": "[listKeys(resourceId('Microsoft.Cache/redis', variables('redisCacheName')), '2023-08-01').primaryKey]"
            },
            {
              "name": "SUPABASE_URL",
              "value": "[parameters('supabaseUrl')]"
            },
            {
              "name": "SUPABASE_ANON_KEY",
              "value": "[parameters('supabaseAnonKey')]"
            },
            {
              "name": "SUPABASE_SERVICE_KEY",
              "value": "[parameters('supabaseServiceKey')]"
            },
            {
              "name": "DATABASE_URL",
              "value": "[parameters('supabaseUrl')]"
            },
            {
              "name": "PLAID_CLIENT_ID",
              "value": "[parameters('plaidClientId')]"
            },
            {
              "name": "PLAID_SECRET",
              "value": "[parameters('plaidSecret')]"
            },
            {
              "name": "PLAID_ENV",
              "value": "sandbox"
            },
            {
              "name": "POLYGON_API_KEY",
              "value": "[parameters('polygonApiKey')]"
            },
            {
              "name": "ALPACA_API_KEY",
              "value": "[parameters('alpacaApiKey')]"
            },
            {
              "name": "ALPACA_SECRET_KEY",
              "value": "[parameters('alpacaSecretKey')]"
            },
            {
              "name": "ALPACA_PAPER",
              "value": "true"
            },
            {
              "name": "OPENAI_API_KEY",
              "value": "[parameters('openaiApiKey')]"
            },
            {
              "name": "ANTHROPIC_API_KEY",
              "value": "[parameters('anthropicApiKey')]"
            },
            {
              "name": "GROQ_API_KEY",
              "value": "[parameters('groqApiKey')]"
            },
            {
              "name": "MEM0_API_KEY",
              "value": "[parameters('mem0ApiKey')]"
            },
            {
              "name": "AZURE_OPENAI_ENDPOINT",
              "value": "https://ai-hello8437ai492250619539.cognitiveservices.azure.com/openai/deployments/model-router/chat/completions?api-version=2025-01-01-preview"
            },
            {
              "name": "AZURE_OPENAI_API_KEY",
              "value": "8oXkby8vIfZ6yPuDagVi9e5xZBzoyCJkgNFu7ovUOjwYVuABnBCAJQQJ99ALACHYHv6XJ3w3AAAAACOG8Byw"
            },
            {
              "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
              "value": "model-router"
            },
            {
              "name": "AZURE_OPENAI_API_VERSION",
              "value": "2025-01-01-preview"
            },
            {
              "name": "JWT_SECRET",
              "value": "[concat('jwt-', uniqueString(resourceGroup().id))]"
            },
            {
              "name": "ENCRYPTION_KEY",
              "value": "[concat('enc-', uniqueString(resourceGroup().id))]"
            }
          ],
          "cors": {
            "allowedOrigins": [
              "[concat('https://', parameters('frontendAppName'), '.azurewebsites.net')]",
              "http://localhost:3000"
            ],
            "supportCredentials": true
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('frontendAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "appCommandLine": "npm run start",
          "alwaysOn": false,
          "http20Enabled": true,
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "nodeVersion": "20-lts",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "NEXT_PUBLIC_API_URL",
              "value": "[concat('https://', parameters('webAppName'), '.azurewebsites.net')]"
            },
            {
              "name": "NEXT_PUBLIC_SUPABASE_URL",
              "value": "[parameters('supabaseUrl')]"
            },
            {
              "name": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
              "value": "[parameters('supabaseAnonKey')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "20-lts"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('webAppName'), '.azurewebsites.net')]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('frontendAppName'), '.azurewebsites.net')]"
    },
    "redisHostname": {
      "type": "string",
      "value": "[concat(variables('redisCacheName'), '.redis.cache.windows.net')]"
    },
    "redisPrimaryKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.Cache/redis', variables('redisCacheName')), '2023-08-01').primaryKey]"
    }
  }
}